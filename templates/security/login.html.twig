{% extends 'layouts/layout.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}


<form method="post" class="w-75 m-auto mt-3">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 my-3 font-weight-normal">Sign in</h1>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control mb-3" autocomplete="username" placeholder="Username" required autofocus>
    <input type="password" name="password" id="inputPassword" class="form-control mb-3" autocomplete="current-password" placeholder="Password" required>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-color" type="submit">
        Sign in
    </button>
</form>
{% endblock %}
